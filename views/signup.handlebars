
<div class="card ">
    <div class="card-content">
        <p class="card-header message-header  title">
            SIGN IN
        </p>
        <form class="box signup-form">
            <div class="field">
            <label class="label">Username</label>
            <div class="control">
                <input class="input" id="username-signup">
            </div>

            </div>
            <div class="field">
                <label class="label">Email</label>
                <div class="control">
                    <input class="input" type="email" id="email-signup">
                </div>
            </div>

            <div class="field">
                <label class="label">Password</label>
                <div class="control">
                    <input class="input" type="password" 
                     id="password-signup">
                </div>
            </div>

            <button class="button is-primary is-medium" type="submit">Sign up</button>
        </form>
        <footer class="card-footer">
            <p class="card-footer-item">
                <span>
                    <a href="/login">
                        Log in instead
                    </a>
                </span>
            </p>

        </footer>
    </div>
    <script src="./js/signup.js"></script>