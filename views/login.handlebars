                <label class="label">Email</label>
                <div class="control">
                    <input class="input" type="email" placeholder="e.g. alex@example.com" id="email-login">
                </div>
            </div>

            <div class="field">
                <label class="label">Password</label>
                <div class="control">
                    <input class="input" type="password" placeholder="********
                    " id="password-login">
                </div>
            </div>

            <button class="button is-primary is-medium" type="submit">Sign in</button>
        </form>
        <footer class="card-footer">
            <p class="card-footer-item">
                <span>
                    <a id="signup"href="/signup">
                        Sign up instead
                    </a>
                </span>
            </p>

